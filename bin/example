#!/usr/bin/env ruby
# frozen_string_literal: true

require "bundler/setup"
require "table_craft"

# You can add fixtures and/or initialization code here to make experimenting
# with your gem easier. You can also use a different console, if you like.

module Renderer
  include ::TableCraft

  class << self
    def call
      print(Table.new.call(width: "300px", height: "200px", styles: { border: "1px solid", cellpadding: "5px" })) do
        THead.new.call do
          TR.new.call do
            TH.new.call { "th 1" }
            TH.new.call { "th 2" }
            TH.new.call { "th 3" }
          end
        end
        TBody.new.call do
          TR.new.call do
            TD.new.call { "td 1" }
            TD.new.call { "td 2" }
            TD.new.call { "td 3" }
          end

          TR.new.call do
            TD.new.call { "td 1" }
            TD.new.call { "td 2" }
            TD.new.call { "td 3" }
          end
        end
      end
    end
  end
end

Renderer.call
