#!/usr/bin/env ruby
# frozen_string_literal: true

require "bundler/setup"
require "table_craft"

# You can add fixtures and/or initialization code here to make experimenting
# with your gem easier. You can also use a different console, if you like.

module Renderer
  
  include ::TableCraft

  def self.call
    print Table.new.(width: "300px", height: "200px", styles: {border: "1px solid", cellpadding: "5px"}) do
      THead.new.() do
        TR.new.() do
          TH.new.() { "th 1" }
          TH.new.() { "th 2" }
          TH.new.() { "th 3" }
        end
      end
      TBody.new.() do
        TR.new.() do
          TD.new.() { "td 1" }
          TD.new.() { "td 2" }
          TD.new.() { "td 3" }
        end
        
        TR.new.() do
          TD.new.() { "td 1" }
          TD.new.() { "td 2" }
          TD.new.() { "td 3" }
        end
      end
    end
  end

end

Renderer.call